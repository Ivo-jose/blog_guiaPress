<%- include('../../partials/header') %>
<%- include('../../partials/navbar') %>

<div class="container espacamento">
    <div class="row">
        <div class="col-sm-12">
            <div class="container border">
                <div class="row" id="card">
                    <div class="col bg-light p-3">
                        <h3>Cadastro de categorias</h3>
                        <hr>
                        <div class="card">
                            <div class="card-header">
                                <h2 class="mb-0">Nova categoria</h2>
                            </div>
                            <div class="card-body">
                                <form action="/categories/save" method="post">
                                    <div class="form-group">
                                        <label for="categoryTitle" class="form-label"><strong>Título da categoria</strong></label>
                                        <input type="text" name="categoryTitle" id="categoryTitle" class="form-control" placeholder="Informe o título da categoria ...">
                                    </div>
                                    <button type="submit" class="btn btn-success w-100 hover mt-3">
                                        <i class="fa-solid fa-plus"></i>
                                        Cadastrar
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
