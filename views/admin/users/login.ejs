<%- include('../../partials/header') %>
<%- include('../../partials/navbar') %>

<div class="container-fluid espacamento espacamento-bottom1">
    <div class="row">
        <div class="col-sm-12 ">
           <div class="w-50 border border-success border-opacity-50 rounded m-auto p-5">
                <div class="card border-success border-opacity-50"  id="cadastro">
                    <div class="card-header border-success border-opacity-50">
                        <h3>Login de admin</h3>
                    </div>
                    <div class="card-body">
                        <form action="/authenticate" method="post">
                            <div class="form-group">
                                <label for="email" class="form-label"><strong>Email</strong></label>
                                <input class="form-control border-success border-opacity-50" type="email" name="email" id="email" placeholder="e-mail@example.com">
                            </div>
                            <div class="form-group">
                                <label for="password" class="form-label"><strong>Senha</strong></label>
                                <input type="password" class="form-control border-success border-opacity-50" name="password" id="password" placeholder="*********">
                            </div>
                            <button type="submit" class="btn btn-outline-success w-100 hover mt-3">
                                Logar
                            </button>
                        </form>
                    </div>
                </div>
           </div>
        </div>
    </div>
</div>

<%- include('../../partials/footer') %>
<%- include('../../partials/endHtml') %>