<%- include('../../partials/header') %>
<%- include('../../partials/navbar') %>

<div class="container espacamento small-screen espacamento-bottom1">
    <div class="row">
        <div class="col-sm-12">
            <h2 class="mt-5">Usuários</h2>
            <a href="/admin/users/create" class="btn btn-outline-success hover mt-3">
                Criar novo usuário
            </a>
            <hr>
            <table class="table table-hover bg-light table-success">
                <thead>
                    <tr>
                        <th scope="col">#Id</th>
                        <th scope="col">Usuário</th>
                    </tr>
                </thead>
                <tbody class="table-group-divider">
                    <% users.forEach(user => { %>
                        <tr>
                            <th scope="row"><%= user.id %></th>
                            <td><%= user.email %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>    
        </div>
    </div>
</div>

<%- include('../../partials/footer') %>
<%- include('../../partials/endHtml') %>
